<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">

    <% if flash[:error] %>
      <h4 class="text-center" style="margin-top: 1em">
        <%= flash[:error] %>
      </h4>
    <% end %>

    <h1 class="title text-center">Login</h1>
    <%= form_tag '/login', method: 'post', style: 'margin-top: 1em' do %>
      <%= text_field_tag :username, nil, class: "form-control pokemon-input text-center", placeholder: "Username", required: true %>
      <%= password_field_tag :password, nil, class: "form-control pokemon-input text-center", placeholder: "Password", required: true %>
      <%= submit_tag "Submit", class: "btn btn-success", style: "margin-bottom: 1em" %>
    <% end %>

  </div>
</div>


